<% include ../partials/header %>

<div class="container" style="padding-top:5%">

<div class="row">
        <h3 style="text-align: center">输入新题目</h1>
        <div style="width: 30%; margin: 20px auto;">
            <form action="/teacher/bank/ds" method="POST">
                <div class="form-group">
                     <input  type="radio" name="sub" value="数据结构">
                    <span style="margin-right:10%; font-size:18px">数据结构</span>
                    <input  type="radio" name="sub" value="算法">
                    <span style="font-size:18px;">算法</span>
                </div>
                <div class="form-group">
                    <input  type="radio" name="type" value="single">
                    <span style="margin-right:18%;font-size:18px">单选</span>
                    <input  type="radio" name="type" value="check">
                    <span style="margin-right:18%;font-size:18px">判断</span>
                    <input  type="radio" name="type" value="tk">
                    <span style="font-size:18px;">填空</span>
                    <div>
                        <span style="font-size:3px; color: gray;">如果题型为判断只需要在答案中填写"正确"或"错误"</span>
                    </div>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="content" placeholder="题目内容">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="selection1" placeholder="选项A">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="selection2" placeholder="选项B">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="selection3" placeholder="选项C">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="selection4" placeholder="选项D">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="answer" placeholder="答案">
                </div>
                <div class="form-group">
                    <input  type="radio" name="level" value="1">
                    <span style="margin-right:10%;font-size:18px">难度1</span>
                    <input  type="radio" name="level" value="2">
                    <span style="margin-right:10%;font-size:18px">难度2</span>
                    <input  type="radio" name="level" value="3">
                    <span style="font-size:18px;">难度3</span>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block" >提交</button>
                </div>
            </form>
            <a href="/teacher/bank/ds">Go Back</a>
        </div>
    </div>



    



</div>







<% include ../partials/footer %>