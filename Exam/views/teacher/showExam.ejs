<% include ../partials/header %>

<div class="container" style="padding-top:5%">
<div class =""style=" overflow-y:auto; overflow-x:auto; width:1200px; height:500px ">
<table class="table table-hover table-striped " >
    <caption>试卷<%= exam.name%>内容</caption>
    <tr align="center">
        <td>序号</td>
        <td>题目内容</td>
        <td>难度</td>
        <td>分值</td>
        <td>选项A</td>
        <td>选项B</td>
        <td>选项C</td>
        <td>选项D</td>
        <td>答案</td>
    </tr>
    <% var questions = exam.questions%>
    <% questions.forEach( function(question, index){ %>
    <tr align="center">
        <td>
            <span><%= index+1 %></span>
        </td>
        <td>
            <span><%= question.content%> </span> 
        </td>
        <td>
          <span><%= question.level%></span>
        </td>
         <td>
          <span><%= exam.score[index]%></span>
        </td>
        <td>
          <span><%= question.selection[0]%></span>
        </td>
        <td>
          <span><%= question.selection[1]%></span>
        </td>
        <td>
          <span><%= question.selection[2]%></span>
        </td>
        <td>
          <span><%= question.selection[3]%></span>
        </td>
        <td>
          <span><%= question.answer%></span>
        </td>
    </tr>
        
    <% }) %>
  
</table>
</div>
<form action="/teacher/exam/<%=exam._id%>" method="POST" style="margin-bottom:5px;">
  <button class="btn btn-success" name="show" >发布试卷</button>
</form>

<form action="/teacher/exam/<%=exam._id%>?_method=DELETE" method="POST">
    
<button class="btn btn-danger">删除试卷</button>

</form>

<a  href="/teacher/exam" >Go Back</a>


</div>

  </body>
</html>

