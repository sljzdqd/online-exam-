<% include ../partials/header %>

<div class="container" style="padding-top:5%">

<div class="row">
        <h3 style="text-align: center">题目信息</h1>
        <div style="width:40%; margin: 10px auto;">
            <form action="/teacher/bank/ds/<%= question._id %>?_method=PUT" method="POST" class="form-horizontal">
                <div class="form-group">
                    <label  class="  col-sm-2 control-label">类型</label>
                    <div class="col-sm-10">
                    <input  disabled="disabled" class="form-control" type="text" name="type" value=<%= question.type%>>
                    </div>
                </div>
                
                <div class="form-group">
                    <label  class="  col-sm-2 control-label">题目内容</label>
                    <div class="col-sm-10">
                    <input  class="form-control" type="text" name="content" value=<%= question.content%>>
                    </div>
                </div>
                
                <div class="form-group">
                    <label  class="  col-sm-2 control-label">选项A</label>
                    <div class="col-sm-10">
                    <input  class="form-control" type="text" name="selection1" value=<%= question.selection[0]%>>
                    </div>
                </div>
                
                <div class="form-group">
                    <label  class="  col-sm-2 control-label">选项B</label>
                    <div class="col-sm-10">
                    <input  class="form-control" type="text" name="selection2" value=<%= question.selection[1]%>>
                    </div>
                </div>
                
                <div class="form-group">
                    <label  class="  col-sm-2 control-label">选项C</label>
                    <div class="col-sm-10">
                    <input  class="form-control" type="text" name="selection3" value=<%= question.selection[2]%>>
                    </div>
                </div>
                
                <div class="form-group">
                    <label  class="  col-sm-2 control-label">选项D</label>
                    <div class="col-sm-10">
                    <input  class="form-control" type="text" name="selection4" value=<%= question.selection[3]%>>
                    </div>
                </div>
                
                <div class="form-group">
                    <label  class="  col-sm-2 control-label">答案</label>
                    <div class="col-sm-10">
                    <input  class="form-control" type="text" name="answer" value=<%= question.answer%>>
                    </div>
                </div>
                
                <div class="form-group">
                    <label  class="  col-sm-2 control-label">难度</label>
                    <div class="col-sm-10">
                    <input  class="form-control" type="text" name="level" value=<%= question.level%>>
                    </div>
                </div>
                
                <div  style="text-align:center">
                    <button class="btn btn-lg btn-primary " style="width:20% ">修改</button>
                </div>
            </form>
            <a href="/teacher/bank/ds">Go Back</a>
        </div>
</div>


<form action="/teacher/bank/ds/<%= question._id %>?_method=DELETE" method="POST">
    
<button class="btn btn-danger">删除</button>

</form>
</div>







<% include ../partials/footer %>